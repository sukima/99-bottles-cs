radius = 6px

border-default()
  border: thin solid black
  -webkit-border-radius: radius
  -moz-border-radius: radius
  border-radius: radius

collapse-header(file)
  pad = 20px
  background: url(file) no-repeat
  padding-left: pad
  margin-left: pad * -1

h1
  font-size: 1.6em

p
  margin: 10px

.subtitle
  margin: 5px 20px
  font-size: 0.8em

#controls
  margin: 10px

#output
  background: lightblue
  border-default()
  margin: 10px
  padding: 5px

.ui-collapsible
  background: lightgreen
  border-default()
  margin: 10px
  padding: 0 0 0 25px

  > h3
    margin: 5px

  > h3.ui-opened
      collapse-header 'opened_icon.gif'

  > h3.ui-closed
      collapse-header 'closed_icon.gif'
